pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-2"
        AWS_ACCOUNT_ID = "109398616914"
        ECR_REPO = "hanu-python-app"
        IMAGE_TAG = "${BUILD_NUMBER}"
        ECR_IMAGE = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}"
        K8S_DEPLOYMENT = "hanu-python-deployment"
        K8S_NAMESPACE = "default"
        EKS_CLUSTER = "education-eks-0D8C2Vur"  // <-- replace with your actual EKS cluster name
    }

    stages {
         stage('Checkout Repositories') {
            steps {
                script {
                    echo "üîÑ Checking out both application and CICD repos..."
                    // Clone the app repo
                    dir('app') {
                        git branch: 'main', url: 'https://github.com/hanumantharao19/sample-python-app.git'
                    }
                    // Clone the CICD repo that contains Jenkinsfile & k8s manifests
                    dir('cicd') {
                        git branch: 'main', url: 'https://github.com/hanumantharao19/aws-cloud-devops.git'
                    }
                }
            }
        }

        stage('Authenticate with AWS & ECR') {
            steps {
                script {
                    sh """
                        aws configure set region ${AWS_REGION}
                        aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                        docker build -t ${ECR_IMAGE}:${IMAGE_TAG} app/
                    """
                }
            }
        }

        stage('Push to AWS ECR') {
            steps {
                script {
                    sh """
                        docker push ${ECR_IMAGE}:${IMAGE_TAG}
                        docker tag ${ECR_IMAGE}:${IMAGE_TAG} ${ECR_IMAGE}:latest
                        docker push ${ECR_IMAGE}:latest
                    """
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                script {
                    sh """
                        # Configure kubectl to talk to your EKS cluster
                        aws eks update-kubeconfig --region ${AWS_REGION} --name ${EKS_CLUSTER}

                        # Check if deployment exists
                        if kubectl get deployment ${K8S_DEPLOYMENT} -n ${K8S_NAMESPACE} >/dev/null 2>&1; then
                            echo "üîÑ Updating existing deployment with new image..."
                            kubectl set image deployment/${K8S_DEPLOYMENT} ${K8S_DEPLOYMENT}=${ECR_IMAGE}:${IMAGE_TAG} -n ${K8S_NAMESPACE}
                        else
                            echo "üöÄ Deployment not found. Creating new deployment from YAML..."
                            kubectl apply -f cicd/Jenkins/python/k8s/deployment.yaml
                        fi

                        # Wait for rollout to complete
                        kubectl rollout status deployment/${K8S_DEPLOYMENT} -n ${K8S_NAMESPACE}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Successfully built, pushed, and deployed: ${ECR_IMAGE}:${IMAGE_TAG}"
        }
        failure {
            echo "‚ùå Build or deployment failed! Check logs above."
        }
    }
}
